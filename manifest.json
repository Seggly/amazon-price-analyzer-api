{
  "manifest_version": 3,
  "name": "Amazon Price Analyzer",
  "version": "1.0",
  "description": "Analyze Amazon product prices using historical data",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://amazon-price-analyzer-api.vercel.app/*",
    "https://api.keepa.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "icons/*",
      "gifs/*",
      "fonts/Baloo2/*",
      "lib/confetti.js"
    ],
    "matches": ["https://*.amazon.com/*"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
  
}
