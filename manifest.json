{
    "manifest_version": 3,
    "name": "Amazon Price Analyzer",
    "version": "1.0",
    "description": "Analyze Amazon product prices using historical data",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://*.amazon.com/*",
      "https://amazon-price-analyzer-api.vercel.app/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*.amazon.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }