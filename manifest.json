{
  "manifest_version": 3,
  "name": "Amazon Price Analyzer",
  "version": "1.0",
  "description": "Analyze Amazon product prices using historical data across all marketplaces",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.co.jp/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://*.amazon.in/*",
    "https://*.amazon.com.br/*",
    "https://*.amazon.com.mx/*",
    "https://*.amazon.com.au/*",
    "https://*.amazon.nl/*",
    "https://*.amazon.tr/*",
    "https://*.amazon.ae/*",
    "https://*.amazon.pl/*",
    "https://*.amazon.se/*",
    "https://*.amazon.sg/*",
    "https://*.amazon.sa/*",
    "https://*.amazon.be/*",
    "https://amazon-price-analyzer-api.vercel.app/*",
    "https://api.keepa.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.de/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.it/*",
        "https://*.amazon.es/*",
        "https://*.amazon.in/*",
        "https://*.amazon.com.br/*",
        "https://*.amazon.com.mx/*",
        "https://*.amazon.com.au/*",
        "https://*.amazon.nl/*",
        "https://*.amazon.tr/*",
        "https://*.amazon.ae/*",
        "https://*.amazon.pl/*",
        "https://*.amazon.se/*",
        "https://*.amazon.sg/*",
        "https://*.amazon.sa/*",
        "https://*.amazon.be/*"
      ],
      "js": ["marketplaceUtils.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "icons/*",
      "gifs/*",
      "fonts/Baloo2/*",
      "lib/confetti.js",
      "marketplaceUtils.js"
    ],
    "matches": [
      "https://*.amazon.com/*",
      "https://*.amazon.co.uk/*",
      "https://*.amazon.de/*",
      "https://*.amazon.fr/*",
      "https://*.amazon.co.jp/*",
      "https://*.amazon.ca/*",
      "https://*.amazon.it/*",
      "https://*.amazon.es/*",
      "https://*.amazon.in/*",
      "https://*.amazon.com.br/*",
      "https://*.amazon.com.mx/*",
      "https://*.amazon.com.au/*",
      "https://*.amazon.nl/*",
      "https://*.amazon.tr/*",
      "https://*.amazon.ae/*",
      "https://*.amazon.pl/*",
      "https://*.amazon.se/*",
      "https://*.amazon.sg/*",
      "https://*.amazon.sa/*",
      "https://*.amazon.be/*"
    ]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}